<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NombreMagique.Views.GamePage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="LightGray" Padding="30, 75">
            <Label Text="Devinez le nombre magique"
                FontSize="32" 
                HorizontalTextAlignment="Center" />
            <Label x:Name="hint" HorizontalTextAlignment="Center" FontAttributes="Italic" />
            <Entry x:Name="number" Placeholder="?" Keyboard="Numeric" Background="white" FontSize="72" Margin="0, 50, 0, 5" HorizontalTextAlignment="Center" HorizontalOptions="CenterAndExpand" WidthRequest="130" />
            <Button Text="Deviner" BackgroundColor="Blue" TextColor="White" HorizontalOptions="CenterAndExpand" WidthRequest="130" CornerRadius="5" Clicked="ButtonGuess_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>